    text-decoration: none;
    width: 170px;
  }
  body > .container {
    border-color: #FFFFFF #CCCCCC #CCCCCC;
    border-style: solid;
    border-width: 1px;
  }
  .box001 {
    margin-left: -10px;
  }
  .annexes {
    float: left;
    width: 30%;
  }
  .clear {
    clear: both;
  }
  .option_upper {
     text-transform:uppercase;
  }
  nav a, nav span { margin: 5px;}
  a.btn {
    text-decoration: none;
  }
  @media (max-width: 767px) {
    .nav-collapse .nav > li > a:hover {color: #000000;}
    .main {background-image: none;}
  }
  </style>

