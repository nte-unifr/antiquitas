{# src/NTE/AntiquitasBundle/Resources/views/multilang_layout.html.twig #}
{% extends 'SonataAdminBundle::standard_layout.html.twig' %}
 

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/nteantiquitas/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
{% endblock %}

{% block top_bar_after_nav %}

    <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        {{ 'form.label_locale'|trans({}, 'SonataUserBundle') }}
        <span class="caret"></span>
    </a>
        <ul class="dropdown-menu">
            {% for locale in ['fr', 'de', 'en'] %}
                <li {% if locale == app.request.locale %}class="active"{% endif %}>
                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale' : locale})) }}">{{ locale }}</a>
                </li>
            {% endfor %}
        </ul>
    </li>
{% endblock %}
